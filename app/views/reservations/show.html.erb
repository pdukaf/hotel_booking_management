
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Reservation-<%= @reservation.id%></h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Hotel name</th>
        <th>Price</th>
        <th>Currency</th>
        <th>Arrival date</th>
        <th>Departure date</th>
        <th>Guest name</th>
        <th>Guest email</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @reservation.id %></td>
        <td><%= @reservation.hotel_name %></td>
        <td><%= @reservation.price %></td>
        <td><%= @reservation.currency %></td>
        <td><%= @reservation.arrival_date %></td>
        <td><%= @reservation.departure_date %></td>
        <td><%= @reservation.guest_name %></td>
        <td><%= @reservation.guest_email %></td>
        <td><%= link_to '<i class="bi bi-pencil"></i>'.html_safe, edit_reservation_path(@reservation) %></td>
        <td><%= button_to @reservation, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')", :style=>"border: none; background-color: #fff;" do %>
              <i class="bi bi-trash" style="color: red;"></i>
          <% end%></td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Back', reservations_path, method: :get, :class => "btn btn-primary", :style=>"color: #fff;" %>
</div>
